@model RankenData.InterfacesSAPCognos.Web.Models.CuentaRelacionada

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div>Mensaje:</div>
    @Html.ValidationMessage("Error")
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cuenta Relacionada</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">            
            @Html.Label("Cuenta relacionada", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.NumeroCuentaRelacionada, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NumeroCuentaRelacionada)
            </div>
        </div>

        <div class="form-group">            
            @Html.Label("Cuenta SAP", new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                @Html.DropDownList("CuentaSAPId", ViewBag.CuentaCargo as SelectList, "Seleccione...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CuentaSAPId)
            </div>
        </div>

        <div class="form-group">            
            @Html.Label("Compañía Cognos", new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                @Html.DropDownList("SociedadCognosId", ViewBag.CuentaCargo as SelectList, "Seleccione...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SociedadCognosId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model IEnumerable<RankenData.InterfacesSAPCognos.Web.Models.ArchivoCarga>

@{
    ViewBag.Title = "Monitor de Carga";
}

<h2>Monitor de Carga</h2>

@*<p>
        @Html.ActionLink("Crear Nuevo", "Create")
    </p>*@
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Fecha Inicio", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("startDate", "", new { @class = "form-control", type = "datetime", placeholder = "dd/mm/aaaa" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Fecha Fin", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("endDate", "", new { @class = "form-control", type = "datetime", placeholder = "dd/mm/aaaa" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Buscar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Identificador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.Label("Año")
        </th>
        <th>
            @Html.Label("Período")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoArchivoCarga1.Nombre)
        </th>
        <th>
            @Html.Label("Usuario")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificador)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Fecha)*@
                @item.Fecha.ToString("dd/MM/yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anio_Col3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mes_Col4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoArchivoCarga1.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Username)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">

     $(document).ready(function () {
         $('input[type=datetime]').datepicker({
             dateFormat: "dd/mm/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-60:+0"
         });

     });
    </script>

}
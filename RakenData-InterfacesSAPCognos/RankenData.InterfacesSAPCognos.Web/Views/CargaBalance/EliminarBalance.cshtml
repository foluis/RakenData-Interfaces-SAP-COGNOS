@{
    ViewBag.Title = "Eliminar Carga Balance";
}

<h2>Eliminar Carga Balance</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div>Mensaje:</div> 
    @Html.ValidationMessage("Error")
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="form-group">
            <p class="control-label col-md-2">Identificador: </p>
            <div class="col-md-10">
                prueba : @Html.TextBox("txtPrueba")
                @Html.DropDownList("Identificador", string.Empty)

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Eliminar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

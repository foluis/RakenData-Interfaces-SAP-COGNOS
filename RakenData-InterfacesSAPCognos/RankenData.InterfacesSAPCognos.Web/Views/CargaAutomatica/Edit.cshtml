@model RankenData.InterfacesSAPCognos.Web.Models.ViewModels.CargaAutomaticaViewModel

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Programar Carga</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.UsuarioId)

        <div class="form-group">            
            @Html.Label("Fecha programada", new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                @Html.TextBoxFor(model => model.FechaProgramadaFormateada, new { @class = "form-control", type = "datetime", autocomplete = "off" })
                @Html.ValidationMessageFor(model => model.FechaProgramadaFormateada)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ruta archivo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>
                    @Html.DisplayTextFor(model => model.RutaArchivo)
                </span>
            </div>
        </div>

        <div class="form-group">            
            @Html.Label("Usuario", new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                <span >
                    @Html.DisplayTextFor(model => model.User.Username)
                </span>                
            </div>
        </div>
      
        <div class="form-group">
            
            @Html.Label("Tipo archivo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                @Html.DropDownList("TipoArchivo", ViewBag.CuentaCargo as SelectList, "Seleccione...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoArchivo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">

     $(document).ready(function () {
         $('input[type=datetime]').datepicker({
             dateFormat: "dd/mm/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-60:+0"
         });

     });
    </script>
}
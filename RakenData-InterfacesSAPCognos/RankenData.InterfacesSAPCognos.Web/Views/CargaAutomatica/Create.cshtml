@model RankenData.InterfacesSAPCognos.Web.Models.ViewModels.CargaAutomaticaViewModel
@*@model RankenData.InterfacesSAPCognos.Web.Models.CargaAutomatica*@

@{
    ViewBag.Title = "Crear";
}
@if (!ViewData.ModelState.IsValid)
{
    <div>Mensaje: </div>
    @Html.ValidationMessage("Error")
}
<h2>Crear</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Programar Carga</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">            
            @Html.Label("Fecha programada", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FechaProgramadaFormateada, new { @class = "form-control", type = "datetime" })
                @Html.ValidationMessageFor(model => model.FechaProgramadaFormateada)
            </div>
        </div>        

        <div class="form-group">
            @Html.Label("Ruta archivo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <span>
                    @Html.DisplayTextFor(model => model.RutaArchivo)
                </span>
            </div>
        </div>

        <div class="form-group">            
            @Html.Label("Tipo archivo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">                
                @Html.DropDownList("TipoArchivo", ViewBag.CuentaCargo as SelectList, "Seleccione...", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TipoArchivo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">

     $(document).ready(function () {
         $('input[type=datetime]').datepicker({
             dateFormat: "dd/mm/yy",
             changeMonth: true,
             changeYear: true,
             yearRange: "-60:+0"
         });

     });
    </script>

}

  


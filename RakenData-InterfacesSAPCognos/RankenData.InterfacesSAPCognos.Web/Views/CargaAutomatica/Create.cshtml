@model RankenData.InterfacesSAPCognos.Web.Models.CargaAutomatica

@{
    ViewBag.Title = "Create";
}
@if (!ViewData.ModelState.IsValid)
{
    <div>Mensaje: </div>
    @Html.ValidationMessage("Error")
}
<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Programar Carga</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.FechaProgramada, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.FechaProgramada, new { type = "date", placeholder = "dd/mm/aaaa" })
                @Html.ValidationMessageFor(model => model.FechaProgramada)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RutaArchivo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RutaArchivo)
                @Html.ValidationMessageFor(model => model.RutaArchivo)
            </div>
        </div>

     

        <div class="form-group">
            @Html.LabelFor(model => model.TipoArchivo, "TipoArchivo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipoArchivo", String.Empty)
                @Html.ValidationMessageFor(model => model.TipoArchivo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

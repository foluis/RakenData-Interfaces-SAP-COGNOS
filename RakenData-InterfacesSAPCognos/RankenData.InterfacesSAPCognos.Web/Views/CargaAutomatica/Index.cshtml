@model IEnumerable<RankenData.InterfacesSAPCognos.Web.Models.CargaAutomatica>
@*@model IEnumerable<RankenData.InterfacesSAPCognos.Web.Models.ViewModels.CargaArutomaticaViewModel>*@
    

@{
    ViewBag.Title = "Programar Carga";
}

<h2>Carga Información</h2>

<p>Programar Carga</p>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>

@*@Html.Label(@Model.First().RutaArchivo, new { @class = "col-xs-4" })*@

<p class="col-lg-9">
   @Model.First().RutaArchivo
</p>

<table class="table">
    <tr>
        <th>            
            @Html.DisplayName("Fecha")
        </th>
        @*<th>
            @Html.DisplayName("Ruta archivo")
        </th>*@
        <th>
            @Html.DisplayName("Usuario")
        </th>
        <th>            
            @Html.DisplayName("Tipo Archivo")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.WasLoaded)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @*@Html.DisplayFor(modelItem => item.FechaProgramada)*@
            @item.FechaProgramada.ToString("dd/MM/yyyy")
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.RutaArchivo)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.User.Username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoArchivoCarga.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.WasLoaded)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

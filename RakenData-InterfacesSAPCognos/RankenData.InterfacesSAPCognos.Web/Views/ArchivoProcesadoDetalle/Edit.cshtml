@model RankenData.InterfacesSAPCognos.Web.Models.ArchivoProcesadoDetalle

@{
    ViewBag.Title = "Editar";
}
@if (!ViewData.ModelState.IsValid)
{
    <div>Mensaje:</div> 
    @Html.ValidationMessage("Error")
    
     <div class="form-group">
            @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Amount)
               
            </div>
        </div>    

        <div class="form-group">
            @Html.LabelFor(model => model.TransactionAmount, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.TransactionAmount)               
            </div>
        </div>
}
else
{ 
    <h2>Editar</h2>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    
        <div class="form-horizontal">
            <h4>Archivo Procesado Detalle</h4>
            <hr />
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.Id)      
                @Html.HiddenFor(model => model.TipoArchivoCreacionId)        
                @Html.HiddenFor(model => model.Company)          
                @Html.HiddenFor(model => model.Period)           
                @Html.HiddenFor(model => model.Actuality)          
                @Html.HiddenFor(model => model.Account)           
                @Html.HiddenFor(model => model.CounterCompany)      
                @Html.HiddenFor(model => model.Dim1)     
                @Html.HiddenFor(model => model.Dim2)     
                @Html.HiddenFor(model => model.Dim3)     
                @Html.HiddenFor(model => model.ITOpex) 
                @Html.HiddenFor(model => model.TransactionCurrency)
                @Html.HiddenFor(model => model.Form)
                @Html.HiddenFor(model => model.AccountName)
                @Html.HiddenFor(model => model.Retrieve)
                @Html.HiddenFor(model => model.Variance)   
                @Html.HiddenFor(model => model.ArchivoProcesadoId) 
       
            <div class="form-group">
                @Html.LabelFor(model => model.Amount, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Amount)
                    @Html.ValidationMessageFor(model => model.Amount)
                </div>
            </div>    

            <div class="form-group">
                @Html.LabelFor(model => model.TransactionAmount, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TransactionAmount)
                    @Html.ValidationMessageFor(model => model.TransactionAmount)
                </div>
            </div>        
        
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-default" />
                </div>
            </div>
     
        </div>
}
}


<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

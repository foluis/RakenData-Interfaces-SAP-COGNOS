@model IEnumerable<RankenData.InterfacesSAPCognos.Web.Models.CuentaCognos>

@{
    ViewBag.Title = "Cuentas de Mayor";
}

@if (!ViewData.ModelState.IsValid)
{
    <div>Mensaje: </div>
    @Html.ValidationMessage("Error") 
}

<h2>Cuentas de mayor</h2>

<p>Administración de cuentas de Cognos</p>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>            
            @Html.Label("Número")
        </th>
        <th>
            @Html.Label("Descripción")
        </th>      
        <th>
            @Html.Label("Es open")
        </th>
        <th>
            @Html.Label("Cuenta cargo")
        </th>
        <th>
            @Html.Label("Cuenta abono")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anexo.Clave)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        @*<td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)            
        </td>       
        <td>
            @Html.DisplayFor(modelItem => item.EsOpen)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CuentaCognos2.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CuentaCognos3.Numero)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Anexo.Clave)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
@using (Html.BeginForm("Index", "CuentaCognos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
   <input type="file" name="file" /><br>
    <input type="submit" name="Submit" id="Submit" value="Carga Masiva"  class="btn btn-default"/>
}


@model RankenData.InterfacesSAPCognos.Web.Models.CuentaCognos

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cuenta Cognos</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Numero)
        @Html.HiddenFor(model => model.AnexoId)
        @Html.HiddenFor(model => model.IsActive)

        <div class="form-group">
            @Html.LabelFor(model => model.Numero,"Número", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Numero)            
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Descripcion,"Descripción", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Descripcion, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
        </div>

        <div id="divEsOpen" class="form-group">
            @Html.Label("Es open", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EsOpen)
                @Html.ValidationMessageFor(model => model.EsOpen)
            </div>
        </div>

        <div id="divCuentaCargo" class="form-group">
            @Html.Label("Cuenta cargo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CuentaCargo", String.Empty)
                @Html.ValidationMessageFor(model => model.CuentaCargo)
            </div>
        </div>

        <div id="divCuentaAbono" class="form-group">
            @Html.Label("Cuenta abono", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CuentaAbono", String.Empty)
                @Html.ValidationMessageFor(model => model.CuentaAbono)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Anexo.Clave, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Anexo.Clave)            
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model RankenData.InterfacesSAPCognos.Web.Models.AnioFiscal

@{
    ViewBag.Title = "Crear";
}

@if (!ViewData.ModelState.IsValid)
{
    <div>Mensaje:</div>
    @Html.ValidationMessage("Error")
}

<h2>Año Fiscal</h2>

<p>Crear Año Fiscal</p>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Año Fiscal</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @*@Html.LabelFor(model => model.Anio, new { @class = "control-label col-md-2" })*@
            @Html.Label("Año", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Anio, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Anio)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.AnioInicio, new { @class = "control-label col-md-2" })*@
            @Html.Label("Año inicio", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AnioInicio, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AnioInicio)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.MesInicio, new { @class = "control-label col-md-2" })*@
            @Html.Label("Mes inicio", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MesInicio, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MesInicio)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.AnioFin, new { @class = "control-label col-md-2" })*@
            @Html.Label("Año fin", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AnioFin, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AnioFin)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.MesFin, new { @class = "control-label col-md-2" })*@
            @Html.Label("Mes fin", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.MesFin, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MesFin)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Crear" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

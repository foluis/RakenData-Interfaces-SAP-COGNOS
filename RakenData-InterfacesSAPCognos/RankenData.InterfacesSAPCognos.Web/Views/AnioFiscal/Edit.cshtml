@model RankenData.InterfacesSAPCognos.Web.Models.AnioFiscal

@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Añio Fiscal</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Anio, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Anio)
                @Html.ValidationMessageFor(model => model.Anio)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnioInicio, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnioInicio)
                @Html.ValidationMessageFor(model => model.AnioInicio)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MesInicio, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MesInicio)
                @Html.ValidationMessageFor(model => model.MesInicio)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AnioFin, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AnioFin)
                @Html.ValidationMessageFor(model => model.AnioFin)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MesFin, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MesFin)
                @Html.ValidationMessageFor(model => model.MesFin)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@using PagedList;
@using PagedList.Mvc;
@model IPagedList<RankenData.InterfacesSAPCognos.Web.Models.Anexo>

@{
    ViewBag.Title = "Indice";
}
@if (!ViewData.ModelState.IsValid)
{
    <div>Mensaje:</div>
    @Html.ValidationMessage("Error")
}
<h2>Anexos</h2>

<p>Administración de Anexos</p>


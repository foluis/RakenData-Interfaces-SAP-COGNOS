@model RankenData.InterfacesSAPCognos.Web.Models.CuentaSAP

@{
    ViewBag.Title = "Editar";
}

@if (!ViewData.ModelState.IsValid)
{
    <div>Mensaje:</div> 
    @Html.ValidationMessage("Error")
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Cuenta SAP</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @*@Html.LabelFor(model => model.Numero, new { @class = "control-label col-md-2" })*@
            @Html.Label("Número", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Numero)
                @Html.ValidationMessageFor(model => model.Numero)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Descripcion, new { @class = "control-label col-md-2" })*@
            @Html.Label("Descripción", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Descripcion)
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.CuentaCognos, "CuentaCognos", new { @class = "control-label col-md-2" })*@
            @Html.Label("Cuenta Cognos", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CuentaCognos", String.Empty)
                @Html.ValidationMessageFor(model => model.CuentaCognos)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.TipoCuentaSAP, "TipoCuentaSAP", new { @class = "control-label col-md-2" })*@
            @Html.Label("Tipo cuenta SAP", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("TipoCuentaSAP", String.Empty)
                @Html.ValidationMessageFor(model => model.TipoCuentaSAP)
            </div>
        </div>

        <div id="divEsOpen" class="form-group">
            @*@Html.LabelFor(model => model.EsOpen, new { @class = "control-label col-md-2" })*@
            @Html.Label("Es open", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.EsOpen)
                @Html.ValidationMessageFor(model => model.EsOpen)
            </div>
        </div>

        <div id="divCuentaCargo" class="form-group">
            @*@Html.LabelFor(model => model.CuentaCargo, new { @class = "control-label col-md-2" })*@
            @Html.Label("Cuenta cargo", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CuentaCargo", String.Empty)
                @Html.ValidationMessageFor(model => model.CuentaCargo)
            </div>
        </div>

        <div id="divCuentaAbono" class="form-group">
            @*@Html.LabelFor(model => model.CuentaAbono, new { @class = "control-label col-md-2" })*@
            @Html.Label("Cuenta abono", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                  @Html.DropDownList("CuentaAbono", String.Empty)
                @Html.ValidationMessageFor(model => model.CuentaAbono)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


<script>
    $(document).ready(function (e) {
        $('#divEsOpen').hide();
        $('#divCuentaCargo').hide();
        $('#divCuentaAbono').hide();

        if ($('#TipoCuentaSAP').val() == 1) {
            $('#divEsOpen').hide();
            $('#divCuentaCargo').hide();
            $('#divCuentaAbono').hide();
            $('#EsOpen').val('false');
            $('#CuentaCargo').val('')
            $('#CuentaAbono').val('');
        }
        else if ($('#TipoCuentaSAP').val() == 2) 
            $('#divEsOpen').show();
        }
        if ($('#EsOpen').val() == "true") {
            $('#divCuentaCargo').show();
            $('#divCuentaAbono').show();
        }
        else {
            $('#divCuentaCargo').hide();
            $('#divCuentaAbono').hide();
            $('#CuentaCargo').val('')
            $('#CuentaAbono').val('');
        }

        $('#TipoCuentaSAP').change(function () {
            if ($('#TipoCuentaSAP').val() == 1) {
                $('#divEsOpen').hide();
                $('#divCuentaCargo').hide();
                $('#divCuentaAbono').hide();
                $('#EsOpen').val('false');
                $('#CuentaCargo').val('')
                $('#CuentaAbono').val('');
            }
            else {
                $('#divEsOpen').show();
            }
        });
        $('#EsOpen').change(function () {
            if ($('#EsOpen').val() == "true") {
                $('#divCuentaCargo').show();
                $('#divCuentaAbono').show();
            }
            else {
                $('#divCuentaCargo').hide();
                $('#divCuentaAbono').hide();
                $('#CuentaCargo').val('')
                $('#CuentaAbono').val('');
            }
        });
    });
</script>